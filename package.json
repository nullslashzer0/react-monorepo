{
  "private": true,
  "name": "react-monorepo",
  "workspaces": {
    "packages": [
      "src/applications/*",
      "src/components/*"
    ],
    "nohoist": [
      "**/eslint",
      "**/eslint-plugin-react"
    ]
  },
  "scripts": {
    "start:client1": "yarn workspace @applications/client1 start",
    "start:client2": "yarn workspace @applications/client2 start"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.3"
  },
  "devDependencies": {
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react-hooks": "^4.0.8"
  }
}
